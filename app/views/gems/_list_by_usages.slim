.table-scroll
  table
    tr
      th Name
      th Version
      th Newest Version
    - gem_usages.each do |gem_usage|
      - info = gem_usage.gem_info
      - version = gem_usage.gem_version
      - current_version = version.version
      - newest_version = info.newest_gem_version.version
      = gem_status_tr(version.status) do
        td= link_to info.name, gem_version_path(gem_id: info.id, id: version.id)
        td= link_to current_version, gem_version_path(gem_id: info.id, id: version.id)
        td= link_to newest_version, gem_version_path(gem_id: info.id, id: info.newest_gem_version)
